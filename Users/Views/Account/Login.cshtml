@model Users.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h2>Login In</h2>

<div class="row">
    <div class="col-sm-6 col-sm-offset-2">
        @Html.ValidationSummary()
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary" type="submit">Login In</button>
        }
        <br />
        @using(Html.BeginForm("GoogleLogin", "Account"))
        {
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
            <button class="btn btn-danger" type="submit">Log In Via Google Button</button>
        }
    </div>
</div>

